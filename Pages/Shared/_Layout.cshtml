<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MOMENT 1.1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="mb-3 p-3 d-flex justify-content-between align-items-center">
        <div class="logo">
            <a class="logo-link" asp-page="/Index">MOMENT 1.1 - DT191G</a>
        </div>
        <div class="date">
            <p class="m-0">Dagens datum är: @DateTime.Now.ToString("yyyy-MM-dd")</p>
        </div>
    </header>

    <div class="container-fluid flex-grow-1">
        <div class="row h-100">
            <!-- vänsterpanel för navigering -->
            <aside class="col-md-3 p-3">
                <nav>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Start" ? "active text-primary" : "text-dark")" asp-page="/Index">Start</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Razor" ? "active text-primary" : "text-dark")" asp-page="/Razor">Razor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Om sidan" ? "active text-primary" : "text-dark")" asp-page="/About">Om sidan</a>
                        </li>
                    </ul>
                </nav>
            </aside>

            <!-- huvudinnehåll -->
            <main class="col-md-9 p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!--centrerar footer -->
<footer class="border-top text-center py-3 mt-3">
    <p>
        &copy; Av Julie Andersson - Kontakta mig via e-post: 
        <a href="mailto:juan2301@student.miun.se">juan2301@student.miun.se</a>
    </p>
</footer>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>